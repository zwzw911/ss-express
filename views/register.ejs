<!DOCTYPE html>
<html lang="zh-cmn-Hans">
    <head>
        <meta charset="UTF-8">
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <meta content="width=device-width,initial-scale=1" name="viewport">

        <title><%= title %></title>
    </head>
    <body>
        <%- includeFile('component/header') -%>
        <div class="container">
            <div id="logo" class="col-lg-7">

            </div>
            <div id="register" class="col-lg-5">
                <div class="col-lg-10">
                    <p class="page-header text-center text-info">注册</p>

                    <form name="form_register" class="form-horizontal" ng-controller="controller">
                        <div  ng-repeat="item in commonItems">
                            <div class="form-group">
                                <label for="{{item.name}}" ngbind="item.name"></label>
                                <input type="{{item.type}}" ng-model="item.value" name="{{item.name}}" required="{{item.required}}" ng-minlength="item.minlength" ng-maxlength="item.maxlength"/>
                            </div>
                            <div class="text-danger" ng-show="!item.validate" ng-messages="form_login.{{item.name}}.$error" >
                                <div ng-message="required">{{item.itemLabelName}}是必填字段</div>
                                <div ng-message="minlength" >最小长度为{{item.minLength}}</div>
                                <div ng-message="maxlength">最大长度为{{item.maxLength}}</div>
                            </div>
                        </div>
                        <div >
                            <button class="btn btn-default">确定</button>
                            <a class="btn btn-info" ng-href="">登录</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
<script type="text/javascript" src="javascript/client/lib/angular.js"/>
<script type="text/javascript" src="javascript/client/register/controller.js"
</html>